<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lyj.manage.dao.UserDao" >
    <resultMap id="BaseResultMap" type="com.lyj.manage.entity.User" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="uName" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
    </resultMap>
    <sql id="Base_Column_List" >
        id,name,password
    </sql>
    <select id="findAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from initname
    </select>
    <select id="selectByUser" parameterType="String" resultMap="BaseResultMap">
        select id,name from initname WHERE name=#{0} AND password=#{1} and Role=2
    </select>
</mapper>